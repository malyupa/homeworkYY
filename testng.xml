	<parameter name="inkContainerValue" value="100"/>
	<parameter name="sizeLetter" value="5"/>

	<test name="testColor">
	<parameter name="color"  value="RED"/>
	<classes>
       <class name="CheckingGetColorMethodTest" />
    </classes>
